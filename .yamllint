---

extends: default

rules:
  braces:
    min-spaces-inside: 0 # yamllint defaults to 0
    max-spaces-inside: 1 # yamllint defaults to 0
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  comments:
    min-spaces-from-content: 1
    comments-indentation: false
    document-start: disable
    level: error
  line-length:
    max: 160
    level: warning
  truthy: disable

ignore: |
  .tox/
  .cache/
  .taskfiles/
